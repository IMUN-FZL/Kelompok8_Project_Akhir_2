<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TugasAkhir2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="Theme.TugasAkhir2" parent="Base.Theme.TugasAkhir2" />

    <style name="Button_Exclusive">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <style name="Typography">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.EditText">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typography.EditText.White">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Typography.Heading">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Typography.Heading.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Typography.Heading.White">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Typography.Heading.White.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
</resources>